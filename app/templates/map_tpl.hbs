<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <strong>{{title}}</strong>
                <span class="label label-default">Map tile :</span>
                <span id="tileX" class="label label-success">0</span>
                <span id="tileY" class="label label-danger">0</span>
            </div>
            <div class="panel-body">
                <div class="map_controlls">
                    <form class="form-inline" role="form">
                        <div class="form-group">
                            <label class="sr-only" for="exampleInputEmail2">Width X</label>
                            <input value="{{sizeX}}" type="number" class="form-control input-sm" id="inpSizeX">
                        </div>
                        <div class="form-group">
                            <label class="sr-only" for="exampleInputPassword2">Width Y</label>
                            <input value="{{sizeY}}" type="number" class="form-control input-sm" id="inpSizeY">
                        </div>
                        <input type="button" class="btn btn-default btn-sm" value="Change size" />
                    </form>
                <div>
                <hr />
                <div id="mapCanvas"></div>
            </div>
        </div>
    </div>
</div>

<script src="./app/js/models/map_scripts/map_scripts.js"></script>
