                            </div>
    </div>
</div>
    </div>


     <div class="panel panel-default col-sm-6">
                    <div class="panel-heading">Combat Skills  <span class="label pull-right">{{combatSkillPoints}}</span>
                    </div>
                       <div class="panel-body">
                                <ul>
        {{#each combatSkills}}
            <li id="skillNumber{{@index}}">{{this.combatSkillname}}: {{this.combatSkillname}}</li>
               <div class="form-inline skillEditForm" id="editSkill{{@index}}">
                    <div class="form-group">
                        <input type="hidden" value="{{this.combatSkillname}}" class="form-control" id="hiddenSkillName{{@index}}">
                    </div>
                    <div class="form-group">
                        <input type="text" id="editSkillName{{@index}}" class="form-control" value="{{this.combatSkillname}}">
                    </div>
                    <div class="form-group">
                        <input type="number" id="editSkillValue{{@index}}" class="form-control" value="{{this.combatSkillValue}}">
                    </div>
                    <div class="form-group">
                        <button class="btn btn-primary" id="saveSkillButton{{@index}}">Save</button>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-primary" id="cancelSkillButton{{@index}}">Cancel</button>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-primary" id="deleteSkillButton{{@index}}">Delete</button>
                    </div>
                </div>

            {{#if this.skillSpecialization}}
                <ul>
                    {{#each skillSpecialization}}
                        <li>{{this}}</li>
                    {{/each}}
                </ul>
            {{/if}}
        {{/each}}
    </ul>
    <div class="form-inline" id="newSkill">
        <div class="form-group">
            <input type="hidden" value="{{this.combatSkillname}}" class="form-control" id="hiddenNewSkillName{{@index}}">
        </div>
        <div class="form-group">
            <label class="control-label" for="newSkillName">New Skill</label>
            <input id="newSkillName" class="form-control" type="text">
        </div>
        <div class="form-group">
            <label class="control-label" for="newSkillName">Skill Level</label>
            <input id="newSkillValue" class="form-control" type="number">
        </div>
        <div class="form-group">
            <button id="newSkillButton" class="btn btn-primary">Add</button>
        </div>
    </div>
</div>

